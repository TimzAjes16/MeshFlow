{
  "name": "meshflow",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "setup:env": "tsx scripts/setup-env.ts",
    "setup:db": "./scripts/setup-database.sh",
    "setup:full": "npm run setup:env && npm run setup:db",
    "native:build": "cd native-addons && npm install && npm run build",
    "native:clean": "cd native-addons && npm run clean",
    "native:rebuild": "npm run native:clean && npm run native:build",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "icons:generate": "node scripts/generate-icons.js",
    "electron:build": "rm -rf .next && npm run icons:generate && cross-env NODE_ENV=production ELECTRON_STANDALONE=1 next build",
    "electron:package": "npm run electron:build && electron-builder",
    "electron:package:mac": "npm run electron:build && electron-builder --mac",
    "electron:package:win": "npm run electron:build && electron-builder --win",
    "electron:package:all": "npm run electron:build && electron-builder --mac --win",
    "electron:postinstall": "electron-builder install-app-deps && npm run native:build"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.84.0",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.0.0",
    "clsx": "^2.1.0",
    "d3": "^7.9.0",
    "d3-force": "^3.0.0",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.0",
    "fuse.js": "^7.0.0",
    "jose": "^6.1.2",
    "lucide-react": "^0.344.0",
    "next": "^16.0.3",
    "next-auth": "^4.24.5",
    "openai": "^4.47.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "reactflow": "^11.11.0",
    "recharts": "^3.4.1",
    "tailwind-merge": "^2.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.0",
    "postcss": "^8.4.35",
    "prisma": "^5.7.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.meshflow.app",
    "productName": "MeshFlow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "prisma/**/*",
      "native-addons/**/*",
      "package.json",
      "!node_modules/**/{README.md,README,readme.md,readme,CHANGELOG.md,LICENSE}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/.{bin,o,obj}",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!node_modules/better-sqlite3/**",
      "!native-addons/node_modules/**",
      "!native-addons/build/**/*.o",
      "!native-addons/build/**/*.a"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "npmRebuild": false,
    "nodeGypRebuild": false
  }
}
